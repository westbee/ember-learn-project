<section>
  <div class="container">
		<div class="row">
			<div class="col-sm-offset-1 col-sm-10">
				<div class="quote">
					<h1>...because every picture tells a story...</h1>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="content-section">
	<div class="container">
		<div class="row" id="category">
      <!-- {{#each model.galleries as |gallery|}}
				{{category-list}}
			{{/each}} -->
      {{#each model.galleries as |gallery|}}
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-md-4 col-sm-offset-0">
          {{#link-to "galleries.gallery" gallery.id class="small-break no-deco"}}
            <img src={{gallery.pic}} class="img-responsive">
            <h5 class="small-break">{{gallery.title}}</h5>
            <p class="text-center">{{gallery.description}}</p>
          {{/link-to}}
        </div>
			{{/each}}
		</div>
	</div>
</section>
