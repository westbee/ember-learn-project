<section class="content-section">
	<div class="container">
		<div class="row">
      <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
        <div id="preise">
			    <h4 class="preise__title">{{price.title}}</h4>
					<div class="preise__description">
            <p>{{price.description}}</p>
          </div>
          <div class="row">
            {{#each price.package as |package|}}

              {{#if (eq price.id "4")}}
                {{#each package.picture as |picture|}}
                  <div class="col-sm-4">
                    <div class="preise__img">
                      <img src="{{picture}}" class="img-responsive">
                    </div>
                  </div>
                {{/each}}
              {{/if}}

              <div class="{{if (eq price.id "4") "col-sm-offset-3 col-sm-6" "col-sm-6"}}">

                {{#if (not-eq price.id "4")}}
                  <div class="preise__img">
                    <img src="{{package.picture}}" class="img-responsive">
                  </div>
                {{/if}}

                <div class="preise__package">
                  <h4 class="preise__package_name">{{package.name}} {{package.price}}€</h4>
                  <hr>
                  {{#each package.attributes as |attributes|}}
                    <p class="preise__package_item">- {{attributes}}</p>
                  {{/each}}
                  <h6 class="preise__package_extras">jedes weitere Bild {{package.extras}}€</h6>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
			</div>
		</div>
	</div>
</section>
